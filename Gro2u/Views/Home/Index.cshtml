@section scripts {
    @Scripts.Render("~/bundles/app")
}
    <div class="page-header">
        <h1>Groceries2u App</h1>
    </div>
<form id="form1" runat="server">
    <div class="Panel with panel-info class">
        <div class="panel-heading">
            <h2 class="panel-title">Products</h2>
        </div>
        <div>
            <button type="button" class=".btn-default" data-bind="click: addProduct">Add Product</button>
            <button type="button" class=".btn-primary" data-bind="click: sortProducts, enable: products().length > 1">Sort</button>
        </div>
        <div class="panel-body">

            <p class="error" data-bind="text: error"></p>
            <ul class="list-unstyled" data-bind="foreach: products, visible: products().length > 0">
                <li><p class="error" data-bind="text: error"></p></li>
                <li>
                    <span class="cname" data-bind="text: Name"></span>
                    <a data-bind="click: $root.editProduct" href="javascript:void(0)">Edit</a>
                    <a data-bind="click: deleteProduct" href="javascript:void(0)">Delete</a>
                </li>
            </ul>
        </div>
    </div>
    </form>
    <div id="dialog" title="Product" data-bind="jqDialog: { 'autoOpen': false, 'resizable': false, 'modal': true, 'width': '50%' },
         template: { 'name': 'descProduct', 'data': selectedProduct, if: selectedProduct }, openDialog: selectedProduct">
    </div>
